@model IEnumerable<FinalProject.Domain.Users.User>


@{
    if (TempData["Create"] != null)
    {
        <div style="margin-top: 150px;" class="alert alert-success" role="alert">@TempData["Create"]</div>
    }
    else if (TempData["Delete"] != null)
    {
        <div style="margin-top: 150px;" class="alert alert-success" role="alert">@TempData["Delete"]</div>
    }
}


<div class="container" style="margin-top:119px;">
    <div class="col-md-12" style="margin:auto">
        <div style="margin-top:150px;">
            <div class="text-center">

                <h1 style="">Users</h1>


            </div>


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>Registration Date</th>
                        <th>Is Active</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.Password</td>
                            <td>@user.Email</td>
                            <td>@user.RegistrationDate</td>

                            @{
                                if (user.IsActive)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Not Active</td>
                                }
                            }


                            <td>
                                <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                            </td>

                            <td>
                                <a asp-controller="User" asp-action="ChangeStatus" asp-route-id="@user.Id" class="btn btn-warning">Change Status</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>



            <div class="text-center">
                <a style="margin-left:auto" asp-controller="User" asp-action="Create" class="btn btn-success">Create User</a>
            </div>

        </div>

    </div>
</div>